# ------------------------------------------------------------------------------
# SCREEN SETTINGS
# ------------------------------------------------------------------------------

startup_message off
#nethack on

#defflow on # will force screen to process ^S/^Q
deflogin on

# Refresh the display when exiting programs
altscreen on

# turn visual bell on
vbell off
vbell_msg "   Wuff  ----  Wuff!!  "

# define a bigger scrollback, default is 100 lines
defscrollback 10000

shell -$SHELL
#shelltitle ' > $|'
#shelltitle      '$ |bash'
shelltitle      '>> |bash'


# ------------------------------------------------------------------------------
# SCREEN KEYBINDINGS
# ------------------------------------------------------------------------------

# Alt + i : 顯示所有執行中的 screen。 (C-a *)
#bindkey "^[i" displays

# Remove some stupid / dangerous key bindings
bind ^k
#bind L
bind ^\
# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

hardstatus on
activity "%c activity -> %n%f %t"
#caption always "%{=B wk}%-w%{kw}%n %t%{-}%+w %-="
caption always "%{kw}%-w%{=B kw}%n %t%{-}%+w %-="

hardstatus alwaysignore
hardstatus alwayslastline "%{= .K} [%l]%<%=%{= .d}$USER%{= .d}@%H %=%{= .m} %Y/%m/%d%{= .M} %1c "

# in mac, we need to comment below setting in screen according to http://stackoverflow.com/questions/903816/which-default-setting-does-make-vim-very-slow-in-macs-screen
#termcapinfo vt100 dl=5\E[M
#termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' # 開啟 256 色模式

